@{
    ViewBag.Title = "Upload RSP Outreach Data";
}

@using RSPNMISv2.ViewModels
@model dynamic

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Upload Data <small>Format (.xlsx) </small></h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm", enctype = "multipart/form-data" }))
                {

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            <h2> Upload File</h2>
                        </label>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <input type="file" name="rspFile" />
                        </div>
                    </div>
    <br /><br /><br />
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">

                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="submit" class="btn btn-primary" />
                        </div>
                    </div>
                }

                <hr />
                @using (Html.BeginForm("emptyUserCache", null, FormMethod.Post, new { id = "EmptyUserCacheForm", enctype = "multipart/form-data" }))
                {

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            <h2>Remove file Data</h2>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="submit" class="btn btn-warning" value="Clear Uploaded Data" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>KPI Values for Review <small></small></h2>
             
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="example" class="table table-striped responsive-utilities jambo_table"><img src="file:///C:\Users\Muhammad Abdullah\AppData\Local\Microsoft\Windows\INetCache\IE\U9YKH08U\4b0f3d20-4d8d-41d7-8a7a-a77178b97528[1].gif" />
                    <thead>
                        <tr class="headings">
                            <th>
                                Indicator
                            </th>
                            <th>
                                Sub-Indicator
                            </th>
                            <th>
                                District
                            </th>
                            <th>
                                Values
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var d in Model.OutReachData)
                            {
                                <tr class="even pointer">
                                    <td class="a-center ">
                                        @d.IndicatorName
                                    </td>
                                    <td class="a-center ">
                                        @d.SubIndicatorName
                                    </td>
                                    <td class="a-center ">
                                        @d.DistrictName
                                    </td>
                                    <td class="a-center ">
                                        @d.Value
                                    </td>
                                </tr>

                            }
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Review and Submit <small>--</small></h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm("submitData", null, FormMethod.Post, new { id = "submitForm", enctype = "multipart/form-data" }))
                {

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Select Partner Organization <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <select name="partnerOrganizationID" class="form-control">
                                <option>Select Partner Organization</option>
                                @foreach (var d in Model.PartnerOrganizations)
                                {
                                    <option value="@d.ID">@d.Title</option>
                                }
                            </select>
                        </div>
                    </div>
    <br /><br /><br />
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Reporting Date <span class="required">*</span>
                        </label>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <input type="date" class="form-control" name="reportingDate" placeholder="Reporting Date" />
                        </div>
                    </div>
    <br /><br /><br />
                    <div class="form-group">
                       
                        <div class="col-md-offset-3 col-md-6 col-sm-6 col-xs-12">
                            <input type="submit" class="btn btn-primary" />
                        </div>
                    </div>


                }

            </div>
        </div>
    </div>
</div>