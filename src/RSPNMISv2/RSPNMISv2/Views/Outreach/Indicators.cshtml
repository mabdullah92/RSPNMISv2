@{
    ViewBag.Title = "Indicators";
}
@model RSPNMISv2.ViewModels.IndicatorViewModel

<h2>Indicators</h2>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Add New <small> </small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>

                @using (Html.BeginForm("indicators", null, FormMethod.Post, new { id = "Form", @class = "form-horizontal form-label-left", enctype = "multipart/form-data" }))
                {

                    <div class="form-group">

                        @Html.LabelFor(d => d.IndicatorName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" }) <span class="required">*</span>


                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(d => d.IndicatorName, new { @class = "form-control col-md-7 col-xs-12", name = "indicatorName", @placeholder = "e.g. Total COs" })

                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(d => d.SubIndicatorName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" }) <span class="required">*</span>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(d => d.SubIndicatorName, new { @class = "form-control col-md-7 col-xs-12", name = "subIndicatorName", @placeholder = "e.g. Women COs" })
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(d => d.IsCumulative, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" }) <span class="required">*</span>


                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.CheckBoxFor(d => d.IsCumulative, new { @class = "js-switch", name = "districtWiseData" })

                        </div>

                    </div>
                    <div class="form-group">

                        @Html.LabelFor(d => d.showVarianceInReports, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" }) <span class="required">*</span>


                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.CheckBoxFor(d => d.showVarianceInReports, new { @class = "js-switch", name = "showVariance" })
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(d => d.OrderIndex, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" }) <span class="required">*</span>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(d => d.OrderIndex, new { @class = "form-control col-md-7 col-xs-12", name = "orderIndex" })
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-primary">Cancel</button>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>KPI Values for Review <small></small></h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="example" class="table table-striped responsive-utilities jambo_table">
                    <thead>
                        <tr class="headings">
                            <th>
                                Indicator
                            </th>
                            <th>
                                Sub-Indicator
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var d in Model.Indicators)
                            {
                                <tr class="even pointer">
                                    <td class="a-center ">
                                        @d.IndicatorName
                                    </td>
                                    <td class="a-center ">
                                        @d.SubIndicatorName
                                    </td>
                                </tr>

                            }
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>